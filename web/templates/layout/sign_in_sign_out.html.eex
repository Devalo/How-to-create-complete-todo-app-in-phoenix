<%= if logged_in?(@conn) do %>
  <%= link "Sign out", to: session_path(@conn, :delete, :access), method: :delete, class: "btn btn-danger" %><br>
  <%= link "#{current_user(@conn).email}", to: user_path(@conn, :show, current_user(@conn)) %>
<% else %>
  <%= link "Create new account", to: user_path(@conn, :new), class: "btn btn-danger" %>
  <%= link "Sign in", to: session_path(@conn, :new), class: "btn btn-danger" %>
<% end %>


